<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	

	      <Button
	          android:id="@+id/button_start_vision"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignBaseline="@+id/button_start_pupil"
	          android:layout_alignBottom="@+id/button_start_pupil"
	          
	          android:layout_marginLeft="17dp"
	          android:layout_toRightOf="@+id/button_start_pupil"
	          android:text="@string/syntest" />
	
	      <Button
	          android:id="@+id/button_start_pupil"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentBottom="true"
	          android:layout_alignParentLeft="true"
	          android:text="@string/pupillreaktion" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
      		android:layout_centerHorizontal="true"
          android:layout_alignParentTop="true"
          android:text="@string/welcome_title"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/button_start_vision"
          android:layout_alignLeft="@+id/button_start_pupil"
          android:layout_below="@+id/textView1"
          android:layout_marginTop="22dp"
          android:text="@string/welcome_text" />

</RelativeLayout>
